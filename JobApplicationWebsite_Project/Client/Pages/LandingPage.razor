<h3>LandingPage</h3>

<head>
	<title>Title</title>
	<meta charset="utf-8">
	<!-- remove comment tags like these before using -->
	<style>
		body {
			background-color: #DAE3E5;
			color: #04080F;
		}

		h1, h2, h3, h4, h5, h6 {
			background-color: #507DBC;
			color: #DAE3E5;
		}

		table, th, td {
			border: 2px solid black;
			border-collapse: collapse;
			font-family: Calibri;
			font-size: 20px;
		}

		.center {
			margin-left: auto;
			margin-right: auto;
		}

		th, td {
			background-color: #BBD1EA;
			color: #04080F;
			padding-top: 10px;
			padding-bottom: 20px;
			padding-left: 30px;
			padding-right: 40px;
		}

		th {
			font-weight: bold;
		}

		table {
			border-spacing: 15px;
		}
	</style>
	</head>
	<body>
		<header>
			<!-- header sizes are determined by the number e.g <h2>,<h3>,etc -->
		</header>
		<nav>
			<!-- use &nbsb to seperate content on the same line. href link provided as example, edit or remove.-->
		</nav>
		<div>
			<!-- div tag to make different divisions -->
			<table class="center">
				<tr>
					<th><b>Account Registration</b></th>
				</tr>

				<tr>
					<th>
						<form>
							<label for="fname">Full name:</label>
							<input type="text" id="fname" name="fname"><br>
						</form>
					</th>
				</tr>

				<tr>
					<th>
						<form>
							<label for="Age">Age:</label>
							<input type="number" id="Age" name="Age"><br>
						</form>
					</th>
				</tr>

				<tr>
					<th>
						<form>
							<label for="Mail">Email Address:</label>
							<input type="text" id="Mail" name="Mail"><br>
						</form>
					</th>
				</tr>


				<tr>
					<th>
						<form>
							<label for="User Name">User Name:</label>
							<input type="text" id="User Name" name="User Name"><br>
							<label for="Password">Password:</label>
							<input type="text" id="Password" name="Passowrd">
						</form>
					</th>
				</tr>

				<tr>
					<th>
						<p> I am logging in as : </p>
						<form>
							<input type="radio" id="Job Applicant" name="fav_language" value="HTML">
							<label for="html">Job Applicant</label><br>
							<input type="radio" id="HR Staff" name="fav_language" value="CSS">
							<label for="css">HR Staff</label><br>
						</form>
					</th>
				</tr>
			</table>
		</div>
	</body>

