<EditForm Model="@company" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />


    <div class="form-group">
        <label> CompanyName </label>
        <div>
            <InputText @bind-Value="@company.CompanyName" class="form-control" />
            <ValidationMessage For="@(()=>company.CompanyName)" />
        </div>
    </div>

    <div class="form-group">
        <label> PostingId </label>
        <div>
            <InputNumber @bind-Value="@company.PostingID" class="form-control" />
            <ValidationMessage For="@(()=>company.PostingID)" />
        </div>
    </div>
    <div class="form-group">
        <label> Description </label>
        <div>
            <InputText @bind-Value="@company.Description" class="form-control" />
            <ValidationMessage For="@(()=>company.Description)" />
        </div>
    </div>
    

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }

    <BackToList Target="jobPost" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Company company { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}